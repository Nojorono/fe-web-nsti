# Apache configuration for Nuxt.js Server Mode
# This file should be placed in the frontend root directory
# For server mode (nuxt start) - Reverse proxy to Node.js

# Enable proxy module and setup reverse proxy
<IfModule mod_proxy.c>
  ProxyPreserveHost On
  ProxyRequests Off
  
  # Proxy all requests to Node.js at localhost:8002
  # Using ProxyPass is more reliable for reverse proxy
  ProxyPass / http://127.0.0.1:8002/
  ProxyPassReverse / http://127.0.0.1:8002/
  
  # ProxyPass configuration
  ProxyPassMatch ^(.*)$ http://127.0.0.1:8002$1
  ProxyPassReverse ^(.*)$ http://127.0.0.1:8002$1
</IfModule>

# Alternative: Use RewriteRule if ProxyPass doesn't work
<IfModule mod_rewrite.c>
  RewriteEngine On
  RewriteBase /
  
  # Proxy requests to Node.js (only if mod_proxy not working)
  RewriteCond %{REQUEST_FILENAME} !-f
  RewriteCond %{REQUEST_FILENAME} !-d
  RewriteRule ^(.*)$ http://127.0.0.1:8002/$1 [P,L]
</IfModule>

# Enable gzip compression
<IfModule mod_deflate.c>
  AddOutputFilterByType DEFLATE text/html text/plain text/xml text/css text/javascript application/javascript application/json
</IfModule>

# Cache static assets
<IfModule mod_expires.c>
  ExpiresActive On
  ExpiresByType image/jpg "access plus 1 year"
  ExpiresByType image/jpeg "access plus 1 year"
  ExpiresByType image/gif "access plus 1 year"
  ExpiresByType image/png "access plus 1 year"
  ExpiresByType text/css "access plus 1 month"
  ExpiresByType application/javascript "access plus 1 month"
  ExpiresByType application/pdf "access plus 1 month"
</IfModule>

